@{
    @model MemoryGame.Board;
    int count = 1;
}

<h2>Memory Game Board</h2>
<table id="table_board">
    @for (int i = 0; i < Model.m; i++)
    {
        <tr>
            @for (int j = 0; j < Model.n; j++)
            {
                var imageUrl = Model.cells[count-1].Image;
                <td class="game-cell" data-id="@count" data-image="@imageUrl">
                    <img src="images/cards/backside.png" class="card-back">
                    <img src="@imageUrl" class="card-front">
                </td>
                count++;
            }
        </tr>
    }
</table>

